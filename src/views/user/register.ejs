<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head') %> 
    <title>ma</title>
    <link rel="stylesheet" href="/css/createEditLoginRegister.css">

</head>
<body>  
    
    <header>
        <%-include('../partials/header') %>
    </header>    
    <main> 
        
        <div class="container">
        <h2>Registrarse</h2>
            <form class="createForm" action="/users/register" method="POST">
                <div class="formControl">
                    <label>Nombre</label>
                    <input type="text" name="name" class="control" value="<%= locals.oldValues && oldValues.name %>">
                    <% if(locals.errors && errors.name){ %> 
                        <p class="errors"><%=errors.name.msg  %> </p>
                    <% } %> 
                </div>
                <div class="formControl">
                    <label>Correo electrónico</label>
                    <input type="email" name="email" class="control" value="<%= locals.oldValues && oldValues.email %>">
                    <% if (locals.errors && errors.email) { %>
                        <p class="errors"><%= errors.email.msg %> </p>
                    <% } %>
                </div>
                <div class="formControl">
                    <label>Contraseña</label>
                    <input type="password" name="password" class="control">
                    <% if(locals.errors && errors.password){ %> 
                        <p class="errors"><%=errors.password.msg  %> </p>
                    <% } %> 
                </div>
                <div class="formControl">
                    <label>Avatar</label>
                    <input type="file" name="photo" class="control" accept=".jpg, .png">
                </div>
                <button type="submit" class="formButton">Registrarse</button>
                <div class="texts">Ya tienes cuenta?<a href="login"> Iniciar sesión</a></div>
            </form>
        </div>
 
        <%-include('../partials/footer') %>
        
    </main>

</body>

</html>
